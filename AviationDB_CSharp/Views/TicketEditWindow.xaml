<Window x:Class="AviationDB_CSharp.Views.TicketEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AviationDB_CSharp.Views"
        mc:Ignorable="d"
        Title="Редактирование билета" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding Title}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Номер билета -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Номер билета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding TicketNo, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="13"
                 Height="30" 
                 Padding="5"
                 IsEnabled="{Binding IsNewTicket}"
                 ToolTip="13 символов"/>

        <!-- Номер бронирования -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Номер брони:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding BookRef, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="6"
                 Height="30" 
                 Padding="5"
                 ToolTip="6 символов"/>

        <!-- Идентификатор пассажира -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="ID пассажира:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding PassengerId, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="20"
                 Height="30" 
                 Padding="5"
                 ToolTip="До 20 символов"/>

        <!-- Имя пассажира -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Имя пассажира:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Text="{Binding PassengerName, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" 
                 Padding="5"/>

        <!-- Телефон -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Телефон:" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" 
                 Padding="5"/>

        <!-- Email -->
        <TextBlock Grid.Row="6" Grid.Column="0" 
                   Text="Email:" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="6" Grid.Column="1" 
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" 
                 Padding="5"/>

        <!-- Адрес -->
        <TextBlock Grid.Row="7" Grid.Column="0" 
                   Text="Адрес:" 
                   Margin="0,0,10,15"/>
        <TextBox Grid.Row="7" Grid.Column="1" 
                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" 
                 Padding="5"/>

        <!-- Ошибки валидации -->
        <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                BorderBrush="#FFCDD2" BorderThickness="1"
                Background="#FFEBEE" CornerRadius="5"
                Padding="10" Margin="0,0,0,20">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel>
                <TextBlock Text="Ошибки валидации:" 
                           FontWeight="Bold" 
                           Foreground="#D32F2F"
                           Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding ValidationErrors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Foreground="#D32F2F"
                                       TextWrapping="Wrap"
                                       Margin="0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"
                    IsEnabled="{Binding IsValid}"
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Width="100" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>
