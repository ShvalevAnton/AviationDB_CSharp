<Window x:Class="AviationDB_CSharp.Views.FlightEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование рейса" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding Title}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Номер рейса -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Номер рейса:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding FlightNo, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="6"
                 Height="30" 
                 Padding="5"
                 IsEnabled="{Binding IsNewFlight}"
                 ToolTip="6 символов (например: SU1234)"/>

        <!-- Дата вылета -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Дата вылета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <DatePicker Grid.Row="2" Grid.Column="1" 
                    SelectedDate="{Binding ScheduledDepartureDate, UpdateSourceTrigger=PropertyChanged}"
                    Height="30" 
                    IsEnabled="True"/>

        <!-- Время вылета -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Время вылета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding ScheduledDepartureHour, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
            <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Grid.Column="2" 
                     Text="{Binding ScheduledDepartureMinute, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
        </Grid>

        <!-- Дата прилета -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Дата прилета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <DatePicker Grid.Row="4" Grid.Column="1" 
                    SelectedDate="{Binding ScheduledArrivalDate, UpdateSourceTrigger=PropertyChanged}"
                    Height="30"/>

        <!-- Время прилета -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Время прилета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding ScheduledArrivalHour, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
            <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Grid.Column="2" 
                     Text="{Binding ScheduledArrivalMinute, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
        </Grid>

        <!-- Аэропорт вылета -->
        <TextBlock Grid.Row="6" Grid.Column="0" 
                   Text="Аэропорт вылета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="6" Grid.Column="1"
                  ItemsSource="{Binding Airports}"
                  DisplayMemberPath="AirportName"
                  SelectedValuePath="AirportCode"
                  SelectedValue="{Binding DepartureAirport}"
                  Height="30"/>

        <!-- Аэропорт прилета -->
        <TextBlock Grid.Row="7" Grid.Column="0" 
                   Text="Аэропорт прилета:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="7" Grid.Column="1"
                  ItemsSource="{Binding Airports}"
                  DisplayMemberPath="AirportName"
                  SelectedValuePath="AirportCode"
                  SelectedValue="{Binding ArrivalAirport}"
                  Height="30"/>

        <!-- Самолет -->
        <TextBlock Grid.Row="8" Grid.Column="0" 
                   Text="Самолет:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="8" Grid.Column="1"
                  ItemsSource="{Binding Aircrafts}"
                  DisplayMemberPath="Model"
                  SelectedValuePath="AircraftCode"
                  SelectedValue="{Binding AircraftCode}"
                  Height="30"/>

        <!-- Статус -->
        <TextBlock Grid.Row="9" Grid.Column="0" 
                   Text="Статус:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="9" Grid.Column="1"
                  ItemsSource="{Binding Statuses}"
                  SelectedItem="{Binding Status}"
                  Height="30"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"
                    IsEnabled="{Binding IsValid}"
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Width="100" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>