<Window x:Class="AviationDB_CSharp.Views.AircraftViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AviationDB_CSharp.Views"
        mc:Ignorable="d"
        Title="Просмотр самолета" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Информация о самолете"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Код самолета:" 
                   FontWeight="Bold" Margin="0,0,10,15"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AircraftCode}" 
                   FontSize="14" FontWeight="Bold" Foreground="#2196F3"
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Модель (EN):" 
                   FontWeight="Bold" Margin="0,0,10,15"/>
        <TextBlock x:Name="ModelEnTextBlock" Grid.Row="2" Grid.Column="1"
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Модель (RU):" 
                   FontWeight="Bold" Margin="0,0,10,15"/>
        <TextBlock x:Name="ModelRuTextBlock" Grid.Row="3" Grid.Column="1"
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Дальность:" 
                   FontWeight="Bold" Margin="0,0,10,15"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="{Binding Range}" FontSize="14" FontWeight="Bold"/>
            <TextBlock Text=" км" Margin="5,0,0,0"/>
        </StackPanel>

        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                BorderBrush="#E0E0E0" BorderThickness="1" 
                Background="#F9F9F9" Margin="0,20,0,20"
                CornerRadius="5" Padding="15">
            <StackPanel>
                <TextBlock Text="📋 Технические характеристики" 
                           FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Код (IATA):" Width="120"/>
                    <TextBlock Text="{Binding AircraftCode}" 
                               FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Макс. дальность:" Width="120"/>
                    <TextBlock Text="{Binding Range}" 
                               FontWeight="Bold" Margin="5,0,0,0"/>
                    <TextBlock Text="км" Margin="2,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Редактировать" 
                    Click="EditButton_Click"
                    Width="120" Height="30" Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="Закрыть" 
                    Click="CloseButton_Click"
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>