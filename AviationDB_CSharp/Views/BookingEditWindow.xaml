<Window x:Class="AviationDB_CSharp.Views.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование бронирования" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding Title}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Номер брони -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Номер брони:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding BookRef, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="6"
                 Height="30" 
                 Padding="5"
                 IsEnabled="{Binding IsNewBooking}"
                 ToolTip="6 символов (буквы и цифры)"/>

        <!-- Дата бронирования -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Дата бронирования:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <DatePicker Grid.Row="2" Grid.Column="1" 
                    SelectedDate="{Binding BookDate, UpdateSourceTrigger=PropertyChanged}"
                    Height="30" 
                    IsEnabled="True"/>

        <!-- Время бронирования -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Время бронирования:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding BookDateHour, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
            <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Grid.Column="2" 
                     Text="{Binding BookDateMinute, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
            <TextBlock Grid.Column="3" Text=":" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Grid.Column="4" 
                     Text="{Binding BookDateSecond, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2" 
                     Height="30" 
                     Padding="5"
                     TextAlignment="Center"/>
        </Grid>

        <!-- Общая сумма -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Общая сумма:" 
                   FontWeight="Bold" 
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Text="{Binding TotalAmount, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" 
                 Padding="5"
                 ToolTip="Введите сумму (например: 15000.50)"/>

        <!-- Информация для новой брони -->
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="📝 Для новой брони будет автоматически сгенерирован номер, если поле оставить пустым"
                   FontStyle="Italic"
                   Foreground="#666"
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"
                   Visibility="{Binding IsNewBooking}"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"
                    IsEnabled="{Binding IsValid}"
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Width="100" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>