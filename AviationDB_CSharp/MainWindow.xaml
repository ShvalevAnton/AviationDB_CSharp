<Window x:Class="AviationDB_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AviationDB_CSharp"
        mc:Ignorable="d"
        Title="Авиационная база данных" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Навигационная панель слева -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="АВИАБАЗА" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="20,30,20,20"
                           HorizontalAlignment="Center"/>

                <!-- Кнопки навигации -->
                <Button x:Name="BtnAircrafts" Content="✈️ Самолеты" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="NavButton_Click" Tag="Aircrafts"/>

                <Button x:Name="BtnAirports" Content="🏢 Аэропорты" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="NavButton_Click" Tag="Airports"/>

                <Button x:Name="BtnBookings" Content="📋 Бронирования" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="NavButton_Click" Tag="Bookings"/>

                <Button x:Name="BtnFlights" Content="🛫 Рейсы" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="NavButton_Click" Tag="Flights"/>

                <Button x:Name="BtnSeats" Content="💺 Места" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="NavButton_Click" Tag="Seats"/>

                <Button x:Name="BtnTickets" Content="🎫 Билеты" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="NavButton_Click" Tag="Tickets"/>

                <!-- Разделитель -->
                <Separator Margin="20" Background="#34495E"/>

                <!-- Выход -->
                <Button Content="🚪 Выход" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="ExitButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Основная область контента -->
        <Frame x:Name="MainFrame" Grid.Column="1" 
               NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
